<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" >
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>CalorieTracker.webapp.servlets.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>food_input</servlet-name>
        <servlet-class>CalorieTracker.webapp.servlets.FoodInputServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>food_input</servlet-name>
        <url-pattern>/food_input</url-pattern>
    </servlet-mapping>

</web-app>
